<local:ABorrowControl x:Class="Library.Controls.Borrow.SwipeCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Controls.Borrow"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="470">
    <Grid Background="#FFE6E6E6">
        <Label x:Name="label" Content="Please Swipe Card" HorizontalAlignment="Left" Margin="155,60,0,0" VerticalAlignment="Top" FontSize="18.667"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="312,631,0,0" VerticalAlignment="Top" Width="75" Click="cancelButton_Click"/>
        <Label x:Name="errorMessage" Content="" HorizontalAlignment="Left" Margin="10,665,0,0" VerticalAlignment="Top" Width="450" Foreground="#FFF60C0C"/>
    </Grid>
</local:ABorrowControl>
