<Window x:Class="Library.Hardware.CardReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Hardware"
        mc:Ignorable="d"
        Title="CardReader" Height="300" Width="300" Left="50" Top="50"
        Closing="Window_Closing">
    <Grid Background="#FFE6E6E6">
        <Label x:Name="label" Content="CardReader" HorizontalAlignment="Left" Margin="42,10,0,0" VerticalAlignment="Top" FontSize="32"/>
        <Label x:Name="label1" Content="Enter Borrower Id : " HorizontalAlignment="Left" Margin="42,68,0,0" VerticalAlignment="Top" FontSize="18.667"/>
        <TextBox x:Name="cardDataBox" HorizontalAlignment="Left" Height="32" Margin="81,108,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="145" FontSize="18.667" IsEnabled="False"/>
        <Button x:Name="swipeButton" Content="Swipe Card" HorizontalAlignment="Left" Margin="81,170,0,0" VerticalAlignment="Top" Width="145" FontSize="18.667" Click="swipeButton_Click" IsEnabled="False"/>
        <Label x:Name="errorMessageLabel" Content="" HorizontalAlignment="Left" Margin="10,230,0,0" VerticalAlignment="Top" Foreground="#FFF70606" Width="274"/>

    </Grid>
</Window>
