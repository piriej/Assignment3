<Application x:Class="Library.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Library"
             xmlns:viewModels="clr-namespace:Library.ViewModels">

    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Button" x:Key="Standard-Button">
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Width" Value="103" />
                <Setter Property="FontSize" Value="18.667" />
                <Setter Property="Height" Value="33" />
            </Style>
            
            

            <Style TargetType="Grid">
                <Setter Property="Background" Value="#FFE6E6E6" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="FontSize" Value="18.667"/>
            </Style>

            <Style TargetType="Label" x:Key="Title-Label"  BasedOn="{StaticResource {x:Type Label}}">
                <Setter Property="FontSize" Value="32"/>
            </Style>
            
            <Style TargetType="TextBox">
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="Width" Value="145"/>
                <Setter Property="FontSize" Value="18.667"/>
            </Style>

            <viewModels:RegionNames
            xmlns:infrastructure="clr-namespace:Library"
            x:Key="RegionNames" />

            <viewModels:ViewNames
            xmlns:infrastructure="clr-namespace:Library"
            x:Key="ViewNames" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
