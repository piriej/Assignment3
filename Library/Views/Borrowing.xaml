<UserControl x:Class="Library.Views.Borrowing"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:Library.ViewModels"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d" 
    d:DesignHeight="700" d:DesignWidth="470">
    <Grid>
        <Label x:Name="Label" Content="Main Menu"  Margin="142,31,0,0"/>
        <Button x:Name="BorrowButton" Content="Borrow" Style="{StaticResource Standard-Button}" RenderTransformOrigin="0.52,0.564" Command="{Binding BorrowCommand}" CommandParameter="SwipeCard"/>
    </Grid>
</UserControl>
