<Window x:Class="Library.Views.CardReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:viewModels="clr-namespace:Library.ViewModels"
        mc:Ignorable="d"
        Title="CardReader" Height="300" Width="300" Left="50" Top="50"
       >
    <!--Closing="Window_Closing"-->
    <Grid>
        <Label x:Name="TitleLabel" Content="CardReader" Margin="42,10,0,0" Style="{StaticResource Title-Label}"/>
        <Label x:Name="FieldLabel" Content="Enter Borrower Id : " Margin="42,68,0,0"/>
        <TextBox x:Name="cardDataBox" Margin="81,108,0,0" IsEnabled="{Binding Enabled}"/>
        <Button x:Name="swipeButton" Content="Swipe Card" Style="{StaticResource Standard-Button}" Margin="81,170,0,0" VerticalAlignment="Top" Width="145"  IsEnabled="{Binding Enabled}"/>
        <Label x:Name="errorMessageLabel" Content="" Margin="10,230,0,0" Foreground="#FFF70606" Width="274"/>
    </Grid>
</Window>
